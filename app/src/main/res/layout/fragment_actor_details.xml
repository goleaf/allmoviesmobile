<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.actors.view.ActorDetailsFragment">

    <ScrollView
        android:id="@+id/actor_details_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/actor_details_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/actor_details_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <ImageView
                android:id="@+id/actor_details_photo_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/actor_details_photo_content_description"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/robert_downey_jr" />

            <ImageView
                android:id="@+id/actor_details_back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/actor_details_back_content_description"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_back_text"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_path" />

            <TextView
                android:id="@+id/actor_details_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:alpha="0.5"
                android:lineSpacingExtra="2sp"
                android:text="@string/movie_details_back"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/actor_details_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/header"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_photo_image"
                tools:text="Robert Downey Jr." />

            <TextView
                android:id="@+id/actor_details_department_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/tag"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_name_text"
                tools:text="Acting" />

            <TextView
                android:id="@+id/actor_details_popularity_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/movie_length"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_department_text"
                tools:text="Popularity: 83.4" />

            <TextView
                android:id="@+id/actor_details_biography_header_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/actor_details_biography"
                android:textColor="@color/header"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_popularity_text" />

            <TextView
                android:id="@+id/actor_details_biography_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.8"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_biography_header_text"
                tools:text="Biography text goes here." />

            <View
                android:id="@+id/actor_details_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/border_movie_item"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_biography_text" />

            <LinearLayout
                android:id="@+id/actor_details_info_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_divider">

                <TextView
                    android:id="@+id/actor_details_birthday_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actor_details_birthday"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_details_birthday_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="April 4, 1965"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_deathday_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/actor_details_deathday"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_deathday_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="June 12, 2020"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_birthplace_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/actor_details_birthplace"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_details_birthplace_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="New York, USA"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_known_for_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/actor_details_known_for"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_details_known_for_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="Iron Man\nSherlock Holmes"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_also_known_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/actor_details_also_known_as"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_details_also_known_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="Bob Downey\nRobert Downey"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_imdb_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/actor_details_imdb"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_details_imdb_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="nm0000375"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/actor_details_homepage_label"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/actor_details_homepage"
                    android:textAllCaps="true"
                    android:textColor="@color/tag"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_details_homepage_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:autoLink="web"
                    android:textColor="@color/header"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="https://example.com"
                    tools:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toStartOf="@+id/actor_details_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/actor_details_left_guideline"
                app:layout_constraintTop_toBottomOf="@id/actor_details_info_container" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/actor_details_error_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/actor_details_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/actor_details_error"
            android:textColor="@color/header"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/actor_details_retry_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actor_details_retry" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/actor_details_progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
