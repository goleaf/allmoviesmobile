<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorScreenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="32dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settings_language_label"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_language_label"
            android:textColor="?attr/colorHeaderText" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/settings_language_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/settings_language_hint"
            app:boxBackgroundColor="?attr/colorCardBackground"
            app:boxStrokeColor="?attr/colorCardStroke"
            app:hintTextColor="?attr/colorSecondaryText">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/settings_language_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="?attr/colorBodyText"
                android:textColorHint="?attr/colorSecondaryText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settings_theme_label"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/settings_theme_label"
            android:textColor="?attr/colorHeaderText" />

        <RadioGroup
            android:id="@+id/settings_theme_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/settings_theme_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/theme_default_name"
                android:textColor="?attr/colorBodyText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/settings_theme_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/theme_dark_name"
                android:textColor="?attr/colorBodyText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/settings_theme_ocean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_ocean_name"
                android:textColor="?attr/colorBodyText" />
        </RadioGroup>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/settings_theme_preview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorCardBackground"
            app:cardCornerRadius="12dp"
            app:strokeColor="?attr/colorCardStroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/settings_theme_preview_title"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_theme_preview"
                    android:textColor="?attr/colorHeaderText" />

                <View
                    android:id="@+id/settings_theme_preview_accent"
                    android:layout_width="64dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="12dp"
                    android:background="?attr/colorPrimary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settings_restart_notice"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/settings_restart_notice"
            android:textColor="?attr/colorSecondaryText" />

    </LinearLayout>
</ScrollView>
