{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "company.schema.json",
  "title": "Company",
  "type": "object",
  "required": ["id", "name", "origin_country"],
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "logo_path": { "type": ["string", "null"] },
    "origin_country": { "type": "string", "minLength": 2, "maxLength": 2 },
    "description": { "type": ["string", "null"] },
    "headquarters": { "type": ["string", "null"] },
    "homepage": { "type": ["string", "null"], "format": "uri" },
    "parent_company": {
      "type": ["object", "null"],
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "logo_path": { "type": ["string", "null"] },
        "origin_country": { "type": ["string", "null"], "minLength": 2, "maxLength": 2 }
      },
      "additionalProperties": false
    },
    "alternative_names": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "logo_gallery": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_path"],
        "properties": {
          "file_path": { "type": "string" },
          "width": { "type": ["integer", "null"] },
          "height": { "type": ["integer", "null"] },
          "aspect_ratio": { "type": ["number", "null"] },
          "vote_average": { "type": ["number", "null"] },
          "vote_count": { "type": ["integer", "null"] }
        },
        "additionalProperties": false
      },
      "default": []
    },
    "produced_movies": { "type": "array", "items": { "$ref": "movie.ref.schema.json" }, "default": [] },
    "produced_series": { "type": "array", "items": { "$ref": "tv.ref.schema.json" }, "default": [] }
  },
  "additionalProperties": false
}
