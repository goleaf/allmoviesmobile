{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "search.schema.json",
  "title": "SearchResult",
  "type": "object",
  "required": ["page", "results", "total_pages", "total_results"],
  "properties": {
    "page": { "type": "integer", "minimum": 1 },
    "results": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "movie.schema.json" },
          { "$ref": "tv.schema.json" },
          { "$ref": "person.schema.json" },
          { "$ref": "company.schema.json" }
        ]
      }
    },
    "groups": {
      "type": "object",
      "properties": {
        "movies": { "type": "array", "items": { "$ref": "movie.schema.json" }, "default": [] },
        "tv": { "type": "array", "items": { "$ref": "tv.schema.json" }, "default": [] },
        "people": { "type": "array", "items": { "$ref": "person.schema.json" }, "default": [] },
        "companies": { "type": "array", "items": { "$ref": "company.schema.json" }, "default": [] }
      },
      "additionalProperties": false
    },
    "total_pages": { "type": "integer", "minimum": 0 },
    "total_results": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": false
}
