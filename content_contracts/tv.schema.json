{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tv.schema.json",
  "title": "Series",
  "type": "object",
  "required": ["id", "name", "original_name", "vote_average", "vote_count", "number_of_seasons", "number_of_episodes"],
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "original_name": { "type": "string" },
    "overview": { "type": ["string", "null"] },
    "tagline": { "type": ["string", "null"] },
    "first_air_date": { "type": ["string", "null"], "format": "date" },
    "last_air_date": { "type": ["string", "null"], "format": "date" },
    "episode_run_time": {
      "type": "array",
      "items": { "type": "integer", "minimum": 0 },
      "default": []
    },
    "number_of_seasons": { "type": "integer", "minimum": 0 },
    "number_of_episodes": { "type": "integer", "minimum": 0 },
    "genres": {
      "type": "array",
      "items": { "$ref": "shared.schema.json#/$defs/Genre" },
      "default": []
    },
    "networks": {
      "type": "array",
      "items": { "$ref": "shared.schema.json#/$defs/Network" },
      "default": []
    },
    "production_companies": {
      "type": "array",
      "items": { "$ref": "company.schema.json" },
      "default": []
    },
    "origin_country": {
      "type": "array",
      "items": { "type": "string", "minLength": 2, "maxLength": 2 },
      "default": []
    },
    "poster_path": { "type": ["string", "null"] },
    "backdrop_path": { "type": ["string", "null"] },
    "vote_average": { "type": "number", "minimum": 0, "maximum": 10 },
    "vote_count": { "type": "integer", "minimum": 0 },
    "popularity": { "type": ["number", "null"] },
    "homepage": { "type": ["string", "null"], "format": "uri" },
    "external_ids": {
      "type": "object",
      "properties": {
        "imdb_id": { "type": ["string", "null"] },
        "facebook_id": { "type": ["string", "null"] },
        "twitter_id": { "type": ["string", "null"] },
        "tvdb_id": { "type": ["string", "null"] },
        "tvrage_id": { "type": ["string", "null"] }
      },
      "additionalProperties": false,
      "default": {}
    },
    "seasons": {
      "type": "array",
      "items": { "$ref": "season.schema.json" },
      "default": []
    },
    "videos": { "type": "array", "items": { "$ref": "video.schema.json" }, "default": [] },
    "images": { "type": "array", "items": { "$ref": "image.schema.json" }, "default": [] },
    "recommendations": { "type": "array", "items": { "$ref": "tv.ref.schema.json" }, "default": [] },
    "similar": { "type": "array", "items": { "$ref": "tv.ref.schema.json" }, "default": [] }
  },
  "additionalProperties": false
}
